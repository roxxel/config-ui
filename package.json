{
    "name": "@roxxel/config-ui",
    "version": "0.0.4",
    "description": "Lightweight library for building and embedding configuration UIs in Hono",
    "license": "MIT",
    "author": "roxxel",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "https://github.com/roxxel/config-ui.git"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.cts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "main": "./dist/index.cjs",
    "types": "./dist/index.d.cts",
    "directories": {
        "example": "examples"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "playground": "bun --watch examples/playground.ts",
        "build": "bunx zshy",
        "build:publish": "bunx zshy && bun publish --access public",
        "build:dry": "bunx zshy --dry-run"
    },
    "dependencies": {
        "clsx": "^2.1.1",
        "hono": "^4.10.0",
        "tailwind-merge": "^3.3.1",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "zshy": "^0.4.4"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "module": "./dist/index.js",
    "zshy": "./src/index.tsx"
}
